{
    "name": "joba/scout",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "search",
        "elasticsearch",
        "model"
    ],
    "description": "The Hyperf Scout package.",
    "authors": [
        {
            "name": "Eric Zhu",
            "email": "eric@zhu.email"
        }
    ],
    "autoload": {
        "psr-4": {
            "HyperfExt\\Scout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\Scout\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-swoole": ">=5.0",
        "joba/elasticsearch": "~3.1.0",
        "hyperf/command": "~3.1.0",
        "hyperf/config": "~3.1.0",
        "hyperf/db-connection": "~3.1.0",
        "hyperf/di": "~3.1.0",
        "hyperf/event": "~3.1.0",
        "hyperf/framework": "~3.1.0",
        "hyperf/model-listener": "~3.1.0",
        "handcraftedinthealps/elasticsearch-dsl": "~8.0",
        "hyperf/paginator": "~3.1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/testing": "~3.1.0",
        "phpstan/phpstan": "^1.0",
        "swoole/ide-helper": "dev-master",
        "mockery/mockery": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "HyperfExt\\Scout\\ConfigProvider"
        }
    }
}
